<application>
  <component name="KeyPromoterXStatistic">
    <option name="statistics">
      <Statistic Action="Copy">
        <Item>
          <IdeaActionID>$Copy</IdeaActionID>
          <ShortCut>'⌘C'</ShortCut>
          <Description>Copy</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Declaration">
        <Item>
          <IdeaActionID>GotoDeclaration</IdeaActionID>
          <ShortCut>'⌘Button1 Click' or 'Button2 Click'</ShortCut>
          <Description>Declaration</Description>
          <Count>5</Count>
        </Item>
      </Statistic>
      <Statistic Action="Run 'counter.spec.js'">
        <Item>
          <IdeaActionID>Run</IdeaActionID>
          <ShortCut>'⌃R'</ShortCut>
          <Description>Run 'counter.spec.js'</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Start Listening for PHP Debug Connections">
        <Item>
          <IdeaActionID>PhpListenDebugAction</IdeaActionID>
          <ShortCut>'⌃D'</ShortCut>
          <Description>Start Listening for PHP Debug Connections</Description>
          <Count>2</Count>
        </Item>
      </Statistic>
      <Statistic Action="Stop Listening for PHP Debug Connections">
        <Item>
          <IdeaActionID>PhpListenDebugAction</IdeaActionID>
          <ShortCut>'⌃D'</ShortCut>
          <Description>Stop Listening for PHP Debug Connections</Description>
          <Count>2</Count>
        </Item>
      </Statistic>
    </option>
  </component>
</application>